<Page x:Class="Master_floor.StartPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Master_floor"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="StartPage" FontFamily="Segoe UI">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Image Source="Мастер пол.png" Grid.Row="0"></Image>
        <TextBlock Text="МАСТЕР ПОЛ" FontSize="40" Grid.Row="1" HorizontalAlignment="Center"></TextBlock>
        <StackPanel Grid.Row="2" Margin="10 10 0 0" HorizontalAlignment="Center">
            <Button Content="Войти как менеджер" x:Name="PartnersButton" Click="PartnersButton_Click"></Button>
            <Button Content="Войти как партнер" x:Name="MaterialsButton" Click="MaterialsButton_Click"></Button>
        </StackPanel>
    </Grid>
</Page>
